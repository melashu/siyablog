
<div class='post'>
    <%= link_to user_post_path(user, post), class:'user-link' do%>
    <h2>Title: <%= post.title%> </h2>
    <p><%= post.text%></p>
    <%end%>
    <p>Comments: <%= Comment.where(post: post).size%>, Likes: <%= Like.where(post: post).size%></p>
   <%if can? :destroy, post%>
    <%= button_to "Delete Post", user_posts_path, method: :delete, class: 'btn-comment button'%>
   <%end%>

</div>